<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle Types -->
    <vType id="car" accel="2.5" decel="4.5" length="4.0" maxSpeed="15.0" sigma="0.5" color="blue"/>
    <vType id="bus" accel="1.8" decel="3.5" length="12.0" maxSpeed="12.0" sigma="0.3" color="orange"/>
    <vType id="truck" accel="2.0" decel="4.0" length="8.0" maxSpeed="10.0" sigma="0.4" color="red"/>

    <!-- Routes from North -->
    <route id="north_straight" edges="north_approach south_exit"/>
    <route id="north_left" edges="north_approach east_exit"/>
    <route id="north_right" edges="north_approach west_exit"/>
    
    <!-- Routes from South -->
    <route id="south_straight" edges="south_approach north_exit"/>
    <route id="south_left" edges="south_approach west_exit"/>
    <route id="south_right" edges="south_approach east_exit"/>
    
    <!-- Routes from East -->
    <route id="east_straight" edges="east_approach west_exit"/>
    <route id="east_left" edges="east_approach north_exit"/>
    <route id="east_right" edges="east_approach south_exit"/>
    
    <!-- Routes from West -->
    <route id="west_straight" edges="west_approach east_exit"/>
    <route id="west_left" edges="west_approach south_exit"/>
    <route id="west_right" edges="west_approach north_exit"/>

    <!-- Vehicle flows (300 vehicles over 300 seconds = 1 veh/sec total) -->
    <!-- Each direction gets 0.25 veh/sec -->
    
    <!-- North approach flows -->
    <flow id="north_car_straight" type="car" route="north_straight" begin="0" end="300" vehsPerHour="495" probability="0.55"/>
    <flow id="north_car_left" type="car" route="north_left" begin="0" end="300" vehsPerHour="225" probability="0.25"/>
    <flow id="north_car_right" type="car" route="north_right" begin="0" end="300" vehsPerHour="180" probability="0.20"/>
    
    <flow id="north_bus_straight" type="bus" route="north_straight" begin="0" end="300" vehsPerHour="66" probability="0.55"/>
    <flow id="north_bus_left" type="bus" route="north_left" begin="0" end="300" vehsPerHour="30" probability="0.25"/>
    <flow id="north_bus_right" type="bus" route="north_right" begin="0" end="300" vehsPerHour="24" probability="0.20"/>
    
    <flow id="north_truck_straight" type="truck" route="north_straight" begin="0" end="300" vehsPerHour="44" probability="0.55"/>
    <flow id="north_truck_left" type="truck" route="north_left" begin="0" end="300" vehsPerHour="20" probability="0.25"/>
    <flow id="north_truck_right" type="truck" route="north_right" begin="0" end="300" vehsPerHour="16" probability="0.20"/>
    
    <!-- South approach flows -->
    <flow id="south_car_straight" type="car" route="south_straight" begin="0" end="300" vehsPerHour="495" probability="0.55"/>
    <flow id="south_car_left" type="car" route="south_left" begin="0" end="300" vehsPerHour="225" probability="0.25"/>
    <flow id="south_car_right" type="car" route="south_right" begin="0" end="300" vehsPerHour="180" probability="0.20"/>
    
    <flow id="south_bus_straight" type="bus" route="south_straight" begin="0" end="300" vehsPerHour="66" probability="0.55"/>
    <flow id="south_bus_left" type="bus" route="south_left" begin="0" end="300" vehsPerHour="30" probability="0.25"/>
    <flow id="south_bus_right" type="bus" route="south_right" begin="0" end="300" vehsPerHour="24" probability="0.20"/>
    
    <flow id="south_truck_straight" type="truck" route="south_straight" begin="0" end="300" vehsPerHour="44" probability="0.55"/>
    <flow id="south_truck_left" type="truck" route="south_left" begin="0" end="300" vehsPerHour="20" probability="0.25"/>
    <flow id="south_truck_right" type="truck" route="south_right" begin="0" end="300" vehsPerHour="16" probability="0.20"/>
    
    <!-- East approach flows -->
    <flow id="east_car_straight" type="car" route="east_straight" begin="0" end="300" vehsPerHour="495" probability="0.55"/>
    <flow id="east_car_left" type="car" route="east_left" begin="0" end="300" vehsPerHour="225" probability="0.25"/>
    <flow id="east_car_right" type="car" route="east_right" begin="0" end="300" vehsPerHour="180" probability="0.20"/>
    
    <flow id="east_bus_straight" type="bus" route="east_straight" begin="0" end="300" vehsPerHour="66" probability="0.55"/>
    <flow id="east_bus_left" type="bus" route="east_left" begin="0" end="300" vehsPerHour="30" probability="0.25"/>
    <flow id="east_bus_right" type="bus" route="east_right" begin="0" end="300" vehsPerHour="24" probability="0.20"/>
    
    <flow id="east_truck_straight" type="truck" route="east_straight" begin="0" end="300" vehsPerHour="44" probability="0.55"/>
    <flow id="east_truck_left" type="truck" route="east_left" begin="0" end="300" vehsPerHour="20" probability="0.25"/>
    <flow id="east_truck_right" type="truck" route="east_right" begin="0" end="300" vehsPerHour="16" probability="0.20"/>
    
    <!-- West approach flows -->
    <flow id="west_car_straight" type="car" route="west_straight" begin="0" end="300" vehsPerHour="495" probability="0.55"/>
    <flow id="west_car_left" type="car" route="west_left" begin="0" end="300" vehsPerHour="225" probability="0.25"/>
    <flow id="west_car_right" type="car" route="west_right" begin="0" end="300" vehsPerHour="180" probability="0.20"/>
    
    <flow id="west_bus_straight" type="bus" route="west_straight" begin="0" end="300" vehsPerHour="66" probability="0.55"/>
    <flow id="west_bus_left" type="bus" route="west_left" begin="0" end="300" vehsPerHour="30" probability="0.25"/>
    <flow id="west_bus_right" type="bus" route="west_right" begin="0" end="300" vehsPerHour="24" probability="0.20"/>
    
    <flow id="west_truck_straight" type="truck" route="west_straight" begin="0" end="300" vehsPerHour="44" probability="0.55"/>
    <flow id="west_truck_left" type="truck" route="west_left" begin="0" end="300" vehsPerHour="20" probability="0.25"/>
    <flow id="west_truck_right" type="truck" route="west_right" begin="0" end="300" vehsPerHour="16" probability="0.20"/>

</routes>